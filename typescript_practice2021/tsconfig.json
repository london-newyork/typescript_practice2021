{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "allowJs": true,
      "checkJs": false,
      "jsx": "react",
      "outDir": "./build",
      // "rootDir": "./lib",
      "removeComments": true,
      "noEmit": true,
      "pretty": true,
      // "skipLibCheck": true,
      "strict": true,
      "noImplicitAny": false,
      "moduleResolution": "node",
      "esModuleInterop": true
  },
  "include": [
    //   "./lib/**/*"
      "index.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}